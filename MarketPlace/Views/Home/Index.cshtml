@{
    ViewBag.Title = "Home Page";

}

<!-- Hero Section -->
<div class="hero" id="home">
    <div class="hero__container">
        <h1 class="hero__heading">@MarketPlace.Resources.Views.Home.Index.Make_your <span>@MarketPlace.Resources.Views.Home.Index.Choice</span></h1>
        <p class="hero__description">@MarketPlace.Resources.Views.Home.Index.Unlimited_Possibilities</p>
        <button class="main__btn"><a href="#">@MarketPlace.Resources.Views.Home.Index.Explore</a></button>
    </div>
</div>

<!-- About Section -->
<div class="main" id="about">
    <div class="main__container">
        <div class="main__img--container">
            <div class="main__img--card"><i class="fas fa-layer-group"></i></div>
        </div>
        <div class="main__content">
            <h1>@MarketPlace.Resources.Views.Home.Index.What_do_we_do</h1>
            <h2>@MarketPlace.Resources.Views.Home.Index.We_find</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Ideas</p>
            <button class="main__btn"><a href="about.html">@MarketPlace.Resources.Views.Home.Index.Schedule_Call</a></button>
        </div>
    </div>
</div>

<!-- Services Section -->
<div class="services" id="services">
    <h1>@MarketPlace.Resources.Views.Home.Index.Support_Center</h1>
    <div class="services__wrapper">
        <div class="services__card">
            <h2>@MarketPlace.Resources.Views.Home.Index.For_business</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Earn_more</p>
            <div class="services__btn"><button><a class="service-link" href="support1.html">@MarketPlace.Resources.Views.Home.Index.Get_Started</a></button></div>
        </div>
        <div class="services__card">
            <h2>@MarketPlace.Resources.Views.Home.Index.Ads_rules</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Reasons</p>
            <div class="services__btn"><button><a class="service-link" href="support2.html">@MarketPlace.Resources.Views.Home.Index.Get_Started</a></button></div>
        </div>
        <div class="services__card">
            <h2>@MarketPlace.Resources.Views.Home.Index.Paid_services</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Types_of_services</p>
            <div class="services__btn"><button><a class="service-link" href="support3.html">@MarketPlace.Resources.Views.Home.Index.Get_Started</a></button></div>
        </div>
        <div class="services__card">
            <h2>@MarketPlace.Resources.Views.Home.Index.Technical_Issues</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Smth_wrong</p>
            <div class="services__btn"><button><a class="service-link" href="support4.html">@MarketPlace.Resources.Views.Home.Index.Get_Started</a></button></div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="main" id="sign-up">
    <div class="main__container">
        <div class="main__content">
            <h1>@MarketPlace.Resources.Views.Home.Index.Join</h1>
            <h2>@MarketPlace.Resources.Views.Home.Index.Sign_Up_Today</h2>
            <p>@MarketPlace.Resources.Views.Home.Index.Makes_Different</p>
            @Html.ActionLink(MarketPlace.Resources.Views.Home.Index.Sign_Up, "Register", "Users", null, new { @class = "main__btn" })
            <p>@MarketPlace.Resources.Views.Home.Index.Have_account</p>
            @Html.ActionLink(MarketPlace.Resources.Views.Home.Index.Login, "Login", "Users", null, new { @class = "main__btn" })
        </div>
        <div class="main__img--container">
            <div class="main__img--card" id="card-2">
                <i class="fas fa-users"></i>
            </div>
        </div>
    </div>
</div>